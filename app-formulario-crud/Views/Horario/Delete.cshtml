@model app_formulario_crud.Models.Horario

@{
    ViewData["Title"] = "Delete";
}

<h3>Apagar</h3>

<div>
    <h4>Horario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label>Dia da Semana</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiaDaSemana)
        </dd>
        <dt class="col-sm-2">
            <label>Hora Início</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HoraInicio)
        </dd>
        <dt class="col-sm-2">
            <label>Hora Fim</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HoraFim)
        </dd>
        <dt class="col-sm-2">
            <label>Tempo de Descanso (h)</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TempoDeDescanso)
        </dd>
        <dt class="col-sm-2">
            <label>Carga Horária (h)</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CargaHoraria)
        </dd>
        <dt class="col-sm-2">
            <label>Carga Horária Semanal</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CargaHorariaSemanal)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" value="Delete" class="btn btn-danger">Apagar</button>
        <a asp-action="Index" type="button" class="btn btn-info ml-3">Voltar</a>
    </form>
</div>
